@model CourseManagement.Models.Course
<div class="modal fade" id="addCourse">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addCourseLabel">Are you sure you want to Delete?</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="Courses/Delete">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id">
                       @Html.LabelFor(x=>x.Name)  
                        @Html.DisplayFor(x=>x.Name)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Price)
                        @Html.DisplayFor(x => x.Price)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.startDate)
                        @Html.DisplayFor(x => x.startDate)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.endDate)
                        @Html.DisplayFor(x => x.endDate)
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" data-save="modal">Delete</button>
            </div>
        </div>
    </div>
</div>

